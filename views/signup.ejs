<%- include('components/header') %>
<div class="mx-auto">
  <div class=" is-1 level flat mx-auto">
  </div>
<br>


  <div class="shadow mx-auto rounded p-4" style="width: 500px;">
    <h3 class="text-center">Welcome!</h3>
    <hr>
  <div class="">
    <form action="/signup" method="post" id="form">
      <div class="container">
        <div class="mx-auto">
          <label class="label">Full Name</label>
          <div class="control">
            <input class="form-control" type="text" placeholder="What shall we call you?" name="name" id="form-name">
          </div>
          <p class="help" id="form-name-help" hidden="true"></p>
        </div>

        <div class="field">
          <label class="label">Username</label>
          <div class="control">
            <input class="form-control" type="text" placeholder="A unique username" name="username" id="form-username">
          </div>
          <p class="help" id="form-username-help" hidden></p>
        </div>

        <div class="field">
          <label class="label">Email</label>
          <div class="control">
            <input class="form-control" name="email" type="email" placeholder="Your most relevant email" id="form-email">
          </div>
          <p class="help" id="form-email-help" hidden></p>
        </div>
        <div class="field">
          <label class="label">Password</label>
          <div class="control">
            <input class="form-control" name="password" type="password" placeholder="8+ characters, and at least one number and memorable"
              id="form-password">
          </div>
          <p class="help" id="form-password-help" hidden></p>
        </div>
        <div class="field">
          <label class="label">Re-Enter Password</label>
          <div class="control">
            <input class="form-control" type="password" placeholder="Just to ensure you didn't make a typo!"
              id="form-repassword">
          </div>
          <p class="help" id="form-repassword-help" hidden></p>
        </div>

        <div class="field">
          <div class="control">
            <label class="checkbox">
              <input type="checkbox">
              I agree to the <a href="#">terms and conditions</a>
            </label>
          </div>
        </div>
        <div class="row justify-between">
          <div class="col">
            <input id="submit-button" value="Submit" type="submit" class="btn btn-primary" disabled></input>
          </div>
          <div class="col">
            Already have an Account? Sign In <a href="/login">Here</a>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
  <div class="column is-1 level">
  </div>
</div>
<script src="/js/bundle-signup.js"></script>





<%- include('components/footer') %>